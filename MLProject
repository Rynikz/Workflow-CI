name: Automatic-Model-Retraining

conda_env: conda.yaml

# Menambahkan bagian parameter
parameters:
  # Nama parameter: data_path
  # Tipe: path (alamat file/folder)
  # Default: Alamat ke dataset bersih kita
  data_path: 
    type: path
    default: namadataset_preprocessing/data_bersih.csv

entry_points:
  main:
    # Memberitahu entry point untuk menggunakan parameter di atas
    parameters:
      - data_path
    # Menjalankan skrip Python dan meneruskan nilai parameter data_path
    command: "python modelling.py --data-path {data_path}"
